           { $(dev)	, AMC	, 1  	, 5	}
           { $(dev)	, AMC	, 2  	, 6	}
           { $(dev)	, AMC	, 3  	, 7	}
           { $(dev)	, AMC	, 4  	, 8	}
           { $(dev)	, AMC	, 5  	, 9	}
           { $(dev)	, AMC	, 6  	, 10	}
           { $(dev)	, AMC	, 7  	, 11	}
