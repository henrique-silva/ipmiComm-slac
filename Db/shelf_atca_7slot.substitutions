file fru_cu.db
{
   pattern { dev	, id	, unit	, fruid	}
           { $(dev)	, CU	, 1  	, 40	}
           { $(dev)	, CU	, 2  	, 41	}
           { $(dev)	, CU	, 3  	, 42	}
           { $(dev)	, CU	, 4  	, 43	}
}

file fru_common.db
{
   pattern { dev	, id	, unit	, fruid }
           { $(dev)	, PM	, 1    	, 50	}
           { $(dev)	, PM	, 2  	, 51	}
           { $(dev)	, PM	, 3  	, 52	}
           { $(dev)	, PM	, 4  	, 53	}
           { $(dev)	, SH	, 1  	, 1	}
           { $(dev)	, SH	, 2  	, 2	}
}

